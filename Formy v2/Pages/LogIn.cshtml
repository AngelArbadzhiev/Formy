@page
@model IndexModel
@{
    ViewData["Title"] = "LogIn";
}

<div class="container">
    <form action="/action_page.php">
        <div class="row">
            <h2 style="text-align:center">Login with Social Media or Manually</h2>
            <div class="vl">
                <span class="vl-innertext">or</span>
            </div>

            <div class="col">
                <a href="https://www.facebook.com" class="fb btn">
                    <i class="fa fa-facebook fa-fw" p style="border:1px; border-style:solid; border-color:black; padding: 1em;"> <br></i> Login with Facebook
                </a>
                <a href="#" class="twitter btn">
                    <i class="fa fa-twitter fa-fw" p style="border:1px; border-style:solid; border-color:black; padding: 1em;"> <br></i> Login with Twitter
                </a>
                <a href="#" class="google btn">
                    <i class="fa fa-google fa-fw" p style="border:1px; border-style:solid; border-color:black; padding: 1em;"> <br></i> Login with Google
                </a>
            </div>

            <div class="col">
                <div class="hide-md-lg">
                    <p>Or sign in manually:</p>
                </div>

                <input type="text" name="username" placeholder="Username" required p style="border:1px; border-style:solid; border-color:black; padding: 1em;"> <br>
                <input type="password" name="password" placeholder="Password" required p style="border:1px; border-style:solid; border-color:black; padding: 1em;"> <br>
                <input type="submit" value="Login" p style="border:1px; border-style:solid; border-color:black; padding: 1em;"> <br>
            </div>

        </div>
    </form>
</div>

<div class="bottom-container">
    <div class="row">
        <div class="col">
            <a href="SignUp" style="color:white" class="btn">Sign up</a>
        </div>
        <div class="col">
            <a href="ForgotPassword" style="color:white" class="btn">Forgot password</a>
        </div>
    </div>
</div>



